<%- include('./compoments/header.ejs',{user:'',state:'login'}); -%>
    <div class="container" style="margin-top:-90px">
        <h1>用户登录</h1>
        <form action="/auth/login" method="POST">
            <div class="form-group">
                <label for="exampleInputEmail1">电子邮箱</label>
                <input type="email" required name="email" placeholder="输入电子邮箱" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <small id="emailHelp" class="form-text text-muted">我们绝不会与其他任何人共享您的电子邮件</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">账户密码</label>
                <input type="password" required name="password" placeholder="输入账户密码" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="form-group">
                <label for="exampleCheck1"><%-vCode%></label>
                <input type="text" class="form-control" placeholder="输入上图的文字" id="exampleCheck1">
            </div>
            <div class="form-group form-check">
                <input type="checkbox" class="form-check-input" id="exampleCheck1">
                <label class="form-check-label" name="" for="exampleCheck1">记住登录</label>
                <span class="float-right">还没有账号吗？点击<a href="/register">注册</a></span>
            </div>
            <button type="submit" class="btn btn-primary">登录</button>
        </form>
    </div>
<%- include('./compoments/footer.ejs'); -%>
